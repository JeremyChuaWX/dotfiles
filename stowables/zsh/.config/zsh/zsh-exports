# paths
if [[ $OSTYPE == "darwin"* ]] then
    eval "$(/opt/homebrew/bin/brew shellenv)" # homebrew
    export FPATH="$FPATH:/opt/homebrew/share/zsh/site-functions" # homebrew zsh completions
fi

export PATH="$HOME/.cargo/bin:$PATH" # rust
export PATH="$HOME/go/bin:$PATH" # go
export PATH="/opt/homebrew/opt/openjdk/bin:$PATH" # java
export PATH="$HOME/.local/bin:$PATH" # local/bin
export FPATH="$FPATH:$HOME/.config/zsh/completions" # own completions

# software version managers
eval "$(fnm env)"

# zsh history
export HISTSIZE=1000000
export SAVEHIST=1000000
export HISTFILE=$ZDOTDIR/.zsh_history

# default apps
export EDITOR=nvim

# less configuration
export LESSOPEN='|~/.lessfilter %s'

# fzf default options
export FZF_DEFAULT_OPTS="
--reverse
--height=70%
--border=none
--scroll-off=5
--info=hidden
--cycle
--bind='ctrl-e:preview-down'
--bind='ctrl-y:preview-up'
--bind='ctrl-f:preview-page-down'
--bind='ctrl-b:preview-page-up'
--bind='alt-p:change-preview-window(top,90%,wrap|40%,nowrap)'
--bind='ctrl-a:toggle-all'
--preview-window='40%'
"

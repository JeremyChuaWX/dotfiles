set hidden true
set ignorecase true
set icons true
set scrolloff 10

cmd open &{{
  case $(file --mime-type -Lb $f) in
    text/*) lf -remote "send $id \$$EDITOR \$fx";;
    *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
  esac
}}

cmd mkdir ${{
  printf "Directory name: "
  read prompt
  mkdir prompt
}}

cmd mkfile ${{
  printf "Directory name: "
  read prompt
  touch prompt
}}

map md mkdir
map mf mkfile
